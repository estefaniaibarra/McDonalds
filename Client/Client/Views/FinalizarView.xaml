<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.Views.FinalizarView" NavigationPage.HasBackButton="False" >
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding RegresarCommand}"></TapGestureRecognizer>
            </StackLayout.GestureRecognizers>
            <Image Source="mcdonaldsredondo" Margin="0,120,0,0"></Image>
            <Label TextColor="Black" Text="Mc Donald's" FontFamily="Comic Sans MS" FontSize="25" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            <Label Text="¡Gracias! su respuesta a sido enviada." TextColor="Black" Margin="40,80,40,80" FontSize="20" HorizontalTextAlignment="Center" FontAttributes="Italic"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>